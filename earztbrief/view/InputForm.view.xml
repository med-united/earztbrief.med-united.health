<mvc:View controllerName="health.med-united.earztbrief.controller.InputForm" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns:cards="sap.f.cards"
          xmlns:l="sap.ui.layout" 
          xmlns:tnt="sap.tnt" 
          displayBlock="true">
    <App id="app">
        <Page title="Send Medication Request" backgroundDesign="Solid">
            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                <Label text="Vorname" />
                <Input value="{/recordTarget/patientRole/patient/name/given}" />
                <Label text="Nachname" />
                <Input value="{/recordTarget/patientRole/patient/name/family}" />
                <Label text="Versichertennummer" />
                <Input value="{/recordTarget/patientRole/id/@extension}" />
                <Label text="Geburtsdatum" />
                <DatePicker value="{/recordTarget/patientRole/patient/birthTime/@value}" />
                <Label text="Email" />
                <Input value="{/recordTarget/patientRole/telecom/@value}" />
                <Label text="Zeitpunkt der Dokumentation" />
                <DateTimePicker value="{/author/time/@value}" />
                <Label text="Autor Id" />
                <Input value="{/author/assignedAuthor/id/@extension}" />
                <Label text="Organisation Id" />
                <Input value="{/custodian/assignedCustodian/representedCustodianOrganization/id/@extension}" />
                <Label text="Nachricht" />
                <Input value="{/component/structuredBody/component/section}" />
            </l:VerticalLayout>
            <footer>
                <Toolbar>
                    <ToolbarSpacer />

                    <ToolbarSpacer />
                    <Button type="Accept" text="Send" press=".onClick" />
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>