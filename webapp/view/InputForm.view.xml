<mvc:View controllerName="health.med-united.earztbrief.controller.InputForm" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns:cards="sap.f.cards"
          xmlns:l="sap.ui.layout" 
          xmlns:tnt="sap.tnt" 
          displayBlock="true">
    <App id="app">
        <Page title="Send Medication Request" backgroundDesign="Solid" class="sapUiContentPadding">
            <l:VerticalLayout width="50%">
                <Label text="Vorname" labelFor="firstname" />
                <Input id="firstname" value="{/recordTarget/patientRole/patient/name/given}"/>
            </l:VerticalLayout>
            <l:VerticalLayout width="50%">
                <Label text="Nachname" />
                <Input value="{/recordTarget/patientRole/patient/name/family}"/>
            </l:VerticalLayout>
            <l:VerticalLayout width="50%">
                <Label text="Versichertennummer" />
                <Input value="{/recordTarget/patientRole/id/@extension}"/>
            </l:VerticalLayout>
            <l:VerticalLayout width="50%">
                <Label text="Geburtsdatum" />
                <DatePicker value="{/recordTarget/patientRole/patient/birthTime/@value}"/>
            </l:VerticalLayout>
            <l:VerticalLayout width="50%">
                <Label text="Sender Email" />
                <Input value="{/recordTarget/patientRole/telecom/@value}" />
            </l:VerticalLayout>
            <l:VerticalLayout width="50%">
                <Label text="Receiver Email" />
                <Input value="{/recordTarget/patientRole/providerOrganization/telecom/@value}" />
            </l:VerticalLayout>
            <l:VerticalLayout width="30%">
                <Label text="Zeitpunkt der Dokumentation" />
                <DateTimePicker value="{/author/time/@value}" />
            </l:VerticalLayout>
            <l:VerticalLayout width="30%">
                <Label text="Autor Id" />
                <Input value="{/author/assignedAuthor/id/@extension}" />
            </l:VerticalLayout>
            <l:VerticalLayout width="30%">
                <Label text="Organisation Id" />
                <Input value="{/custodian/assignedCustodian/representedCustodianOrganization/id/@extension}" />
            </l:VerticalLayout>
            <l:VerticalLayout width="100%">
                <Label text="Nachricht" />
                <TextArea value="{/component/structuredBody/component/section}" rows="8" width="100%"/>
            </l:VerticalLayout>
            <footer>
                <Toolbar>
                    <ToolbarSpacer />

                    <ToolbarSpacer />
                    <Button type="Accept" text="Send" press=".onClick" />
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>